<html>
    <%- include("../partials/head") %>
<body>

    <%- include("../partials/navbar") %>

    <h1>Crear nuevo Documento</h1>
    <form action="./guardar" method="POST" enctype="multipart/form-data">
        <fieldset>
        <label for="nombre">Nombre del Documento:</label> 
        <input type="text" id="nombre" name="nombre">
        <br>

        <label for="descripcion">Descripción:</label> <br>
        <textarea id="descripcion" name="descripcion" rows="4" cols="50" maxlength="140"></textarea>
        <br><br>


        <label for="fecha">Fecha del documento: </label>
        <input id="fecha" name= "fecha" type="date">
        <br><br>

        
        <label for="tipo">Tipo: </label>
        <select class="form-select" aria-label="Default select example" name="tipo"  id="tipo">
            <option selected value="-1"> Hacer selección </option>
            <% for(let i in tipo_documento) { %>
                <option value='<%= tipo_documento[i].id %>'> <%= tipo_documento[i].nombre %> </option>
            <% } %>
        </select>
        <br>

        <label for="file">Cargar Archivo: </label>
        <input type="file" id="file" name="file">
        <br>
        <br>
        <button type = "reset">Borrar</button>
        <button type="submit">Agregar informacion</button>
        </fieldset>

    </form>
</html>