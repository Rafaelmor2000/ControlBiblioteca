<html>
    <%- include("../partials/head") %>

<body>
    
    <%- include("../partials/navbar") %>

    <h1>Crear nuevo tipo de documento</h1>
    <form action="./guardar" method="POST">
        <fieldset>
        <label for="nombre">Nombre del tipo:</label> 
        <input type="text" name="nombre" />
        <% if(errors && errors.nombre) { %>
            <span class="text-danger"><%= errors.nombre.msg %></span>
        <% } %>
        <br>
        <fieldset name="opciones">
        <legend>Clasificacion:</legend>
        <% for(let i in list) { %>
                <input type="radio" id='<%= list[i].id %>' name="clasificacion" value='<%= list[i].id %>'>
                <label for='<%= list[i].id %>'> <%= list[i].nombre %> </label><br>
        <% } %>
        </fieldset>
        <% if(errors && errors.clasificacion) { %>
            <span class="text-danger"><%= errors.clasificacion.msg %></span>
        <% } %>
        <br>
        <button type = "reset">Borrar</button>
        <button type="submit">Crear</button>
        </fieldset>
    </form>
</body>
</html>